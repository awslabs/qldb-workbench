{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build/src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": ["esNext", "es2019", "es2017", "es6", "es5", "es2015", "dom", "scripthost"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
